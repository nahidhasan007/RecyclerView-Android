<?xml version="1.0" encoding="utf-8"?>


        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="459dp"
        android:layout_height="match_parent"
        android:background="@drawable/drawborder"

        >


        <ImageView
            android:id="@+id/image"
            android:layout_width="89dp"
            android:layout_height="73dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:contentDescription="Contact Image"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/sharetrip3" />

        <TextView
            android:id="@+id/name"
            android:layout_width="227dp"
            android:layout_height="36dp"
            android:layout_marginStart="116dp"
            android:layout_marginTop="16dp"
            android:labelFor="@id/name"
            android:text="Name"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

        </TextView>

        <TextView
            android:id="@+id/contact"
            android:layout_width="227dp"
            android:layout_height="31dp"
            android:layout_marginTop="4dp"
            android:labelFor="@id/contact"
            android:text="Contact"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/name"
            app:layout_constraintTop_toBottomOf="@+id/name"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/address"
            android:layout_width="227dp"
            android:layout_height="31dp"
            android:layout_marginTop="4dp"
            android:text="Address"
            app:layout_constraintEnd_toEndOf="@+id/contact"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/contact"
            app:layout_constraintTop_toBottomOf="@+id/contact"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>


